<% title "Master List" %>

<div class="media">
  <div class="media-body">
    <table class="table table-hover table-small">
      <thead>
      <tr>
        <th>Name</th>
        <th>Start Date</th>
        <th>Interval</th>
        <th>Alert Category</th>
        <th>Contact Name</th>
      </tr>
      </thead>

      <tbody>
      <% @recurring_alerts.each do |r_alert| %>
          <tr>
            <td><%= r_alert.name %></td>
            <td><%= r_alert.start_date.strftime("%m/%d/%Y") %></td>
            <td><%= r_alert.alert_interval %></td>
            <td><%= r_alert.alert_category %></td>
            <td><%= r_alert.contact_name %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
