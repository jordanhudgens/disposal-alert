<%= form_for @recurring_alert, html: { class: 'form-horizontal' } do |f| %>
    <% if @recurring_alert.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@recurring_alert.errors.count, "error") %> prohibited this d_alert from being saved:</h2>

          <ul>
            <% @recurring_alert.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="control-group">
      <%= f.label "Title", class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :name %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :contact_name, class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :contact_name %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :alert_interval, class: 'control-label' %>
      <div class="controls">
        <%= f.select(:alert_interval, options_for_select([['Weekly', 1], ['Bi Monthly', 2], ['Monthly', 3], ['Quarterly', 4], ['Annually', 5]])) %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :start_date, class: 'control-label' %>
      <div class="controls">
        <%= f.date_select :start_date %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :alert_category, class: 'control-label' %>
      <div class="controls">
        <%= f.select :alert_category, options_for_select([["Category 1", "category_1"], ["Category 2", "category_2"], ["Category 3", "category_3"]]) %>
      </div>
    </div>

    <hr>

    <div class="control-group">
      <div class="controls">
        <%= f.submit "Save", class: 'btn btn-primary' %>
      </div>
    </div>
<% end %>
