<%= form_for(@recurring_alert) do |f| %>
    <% if @recurring_alert.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@recurring_alert.errors.count, "error") %> prohibited this d_alert from being saved:</h2>

          <ul>
            <% @recurring_alert.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :contact_name %><br>
      <%= f.text_field :contact_name %>
    </div>

    <div class="field">
      <%= f.label :alert_interval %><br>
      <%= f.text_field :alert_interval %>
    </div>

    <div class="field">
      <%= f.label :start_date %><br>
      <%= f.date_select :start_date %>
    </div>

    <div class="field">
      <%= f.label :alert_category %><br>
      <%= f.select :alert_category, options_for_select([["Category 1", "category_1"], ["Category 2", "category_2"], ["Category 3", "category_3"]]) %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
